<Window x:Class="API_app.CountryAPI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:API_app"
        mc:Ignorable="d" Title="CountryAPI" Height="450" Width="722" Icon="/icon.png">
    <Grid>
        <Button Content="Button" HorizontalAlignment="Left" 
                Margin="220,26,0,0" VerticalAlignment="Top" 
                Height="20" Width="122" Click="Button_Click"/>
        <TextBox HorizontalAlignment="Left" Margin="40,26,0,0" 
                 TextWrapping="Wrap" Text="Poland" VerticalAlignment="Top" 
                 Width="164" Height="20" Name="TextBox"/>
        
        <ListBox d:ItemsSource="{d:SampleData ItemCount=5}" Margin="40,63,379,92"
                 x:Name="ListBox1"/>

        <Border Margin="353,77,22,103" Background="GhostWhite" BorderBrush="Gainsboro" 
                BorderThickness="1" Height="230" Width="336">
            <Image HorizontalAlignment="Left" Height="230"
               VerticalAlignment="Top" Width="330" Name="Photo"/>
        </Border>

    </Grid>
</Window>
